<main class="container">
        <section class="text-center pt-5 pb-5 mb-5">
            <h1 class="display-5">List a Space</h1>
            <p class="lead text-muted ">You can list spaces anywhere around the world!</p>
            <small class="text-muted"> - even your mum's basement - </small>
        </section>

        <section class="grid">
            <div class="w-50">
              <% if @user %>
                <form action="/spaces/add" method="POST" id="form-content" class="">
                    <div class="text-center form-group mb-2">
                        <label>Name</label>
                        <input type="text" class="form-control" name = "name"placeholder="Name" required>
                    </div>
                    <div class="text-center form-group mb-2">
                        <label>Description</label>
                        <textarea row="4" col="50" class="form-control" name = "description" class="" placeholder="Describe your space" maxlength="500"required></textarea>
                    </div>
                    <div class="row mb-2">
                      <div class="text-center form-group col">
                          <label>Location</label>
                          <input type="text" class="form-control" name = "city" class="" placeholder="City" required>
                      </div>
                      <div class="text-center form-group col">
                          <label>Price per night</label>
                          <input type="number"class="form-control"  name = "price" class="" placeholder="Â£" required>
                      </div>
                    </div>
                    <div class="text-center form-group mb-3">
                        <label>Property image</label>
                        <input type="url" class="form-control" name="hero_image" placeholder="Image URL" maxlength="500">
                    </div>
                    <div class="text-center form-group">
                      <input class="btn btn-primary" type="submit" value="submit">
                    </div>
                </form>
                <% else %>
                  <div class="grid">
                    <p>To add a Space, please</p>
                    <a href="/users/login" class="btn btn-primary text-right" role="button">Login</a> or <a href="/users/register" class="btn btn-default text-right" role="button">Register</a>
                  </div>
                <% end %>
            </div>
        </section>
    </main>
