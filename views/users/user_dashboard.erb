    <main class="container-fluid">
        <section class="text-center pt-5 pb-5 mb-5">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
              class="bi bi-columns-gap mb-5" viewBox="0 0 16 16">
            <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z" />
          </svg>
          <br>
            <h1>My Dashboard</h1>
            <p class="lead text-muted"></p>
        </section>
        <div class="row align-items-center me-2 ms-2">
            <div class="col col-sm-12 col-md-6 mt-4">
                <h3 class="mb-4">Requests made:</h3>


                <div class="list-group grid">
                  <% if @requests_made %>
                    <% @requests_made.each do |request| %>
                      <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                          <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                          <div class="d-flex w-100 justify-content-between">
                              <h5 class="mb-1"><%= request.space_name %></h5>
                              <small class="text-muted"><%= request.request_status %></small>
                          </div>
                          <p class="mb-1"><%= request.space_city %></p>
                          <small class="text-muted"><%= request.date_in %> to <%= request.date_out %></small>
                      </a>
                      <% end %>
                    <% else %>
                    You have no booking requests
                    <% end %>

                </div>




            </div>
            <div class="col col-sm-12 col-md-6 mt-4">
                <h3 class="mb-4">Requests received:</h3>


                <div class="list-group grid">
                  <% if @requests_received %>
                    <% @requests_received.each do |request| %>
                      <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                          <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                          <div class="d-flex w-100 justify-content-between">
                              <h5 class="mb-1"><%= request.space_name %></h5>
                              <small class="text-muted"><%= request.request_status %></small>
                              <% if request.request_status == "pending" %>
                                <form action="/users/dashboard/<%= request.booking_id %>/approve" method="post">
                                  <input type="hidden" name="<%= request.booking_id %>">
                                  <input type="submit" class="btn btn-outline-success" value="Approve">
                                </form>
                                <form action="/users/dashboard/<%= request.booking_id %>/decline" method="post">
                                  <input type="hidden" name="<%= request.booking_id %>">
                                  <input type="submit" class="btn btn-outline-danger" name="<%= request.booking_id %>" value="Decline">
                                </form>
                              <% else %>
                              <% end %>
                          </div>
                          <p class="mb-1"><%= request.space_city %></p>
                          <small class="text-muted"><%= request.date_in %> to <%= request.date_out %></small>
                      </a>
                      <% end %>
                    <% else %>
                      You have no spaces to host
                    <% end %>



            </div>
        </div>
    </main>
